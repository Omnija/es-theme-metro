<theme>
    <formatVersion>4</formatVersion>
    <include>./../metro.xml</include>

	<view name="system">

	<!-- basic, detailed -->
	
		<image name="system_logo" extra="true">
		    <path>./logo.png</path>
			<tile>false</tile>
			<color>1ABC9C</color>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>
		
		<image name="system_mascot" extra="true">
		    <path>./mascot.png</path>
			<color>16A085</color>
		</image>
	
		<image name="logo">
			<path>./system.png</path>
        </image>
		
		<image name="background_systembox" extra="true">
			<color>1ABC9C</color>
		</image>
		
	</view>
	
		<view name="basic">
			<image name="background_basicbox" extra="true">
			<color>1ABC9C</color>
		</image>
		
		</view>
	
		<view name="detailed, video">
	
	<!-- Player Meta -->
	
		<text name="md_lbl_players">
			<color>16A085</color>
		</text>
		
		<text name="md_players">
			<color>16A085</color>
		</text>	
		
		<text name="md_lbl_playcount">
			<color>16A085</color>
		</text>
		
		<text name="md_playcount">
			<color>16A085</color>
		</text>	
		
		<text name="md_lbl_lastplayed">
			<color>16A085</color>
		</text>
		
		<datetime name="md_lastplayed">
			<color>16A085</color>
		</datetime>
		
		<!-- End Player Meta -->
		
		<!-- Game Meta -->
		
		<text name="md_lbl_genre">
			<color>16A085</color>
		</text>
		
		<text name="md_genre">
			<color>16A085</color>
		</text>	
		
		<text name="md_lbl_developer">
			<color>16A085</color>
		</text>
		
		<text name="md_developer">
			<color>16A085</color>
		</text>	
		
		<text name="md_lbl_publisher">
			<color>16A085</color>
		</text>
		
		<text name="md_publisher">
			<color>16A085</color>
		</text>	
		<!-- End Game Meta -->
		
	</view>
	
	<view name="basic, detailed, video">
	
		<image name="logo">
			<path>./system.png</path>
        </image>
		
		<rating name="md_rating">
			<filledPath>./rate-full.png</filledPath>
			<unfilledPath>./rate-empty.png</unfilledPath>
			<!-- <color>E74C3C</color> -->
		</rating>
	
		<image name="background_systembox" extra="true">
			<color>1ABC9C</color>
		</image>
		
		<image name="background_detailedbox" extra="true">
			<color>1ABC9C</color>
		</image>
		
	</view>
	
</theme>